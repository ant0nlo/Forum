@{
    ViewData["Title"] = "Privacy Policy";
}

<section class="py-5 bg-light border-bottom">
    <div class="container">
        <h1 class="display-5 mb-3 text-primary text-center text-md-start">
            <i class="fas fa-user-shield me-2"></i> @ViewData["Title"]
        </h1>
        <p class="lead text-muted text-center text-md-start mb-4">
            Your privacy matters. This policy outlines how we handle your data with transparency and responsibility.
        </p>
    </div>
</section>

<section class="py-5 bg-white">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="mb-5">
                    <h4 class="text-primary">1. Information We Collect</h4>
                    <p class="text-muted">We collect information you provide when you register, post content, or interact with features. This may include your name, email address, IP address, and usage data.</p>
                </div>
                <div class="mb-5">
                    <h4 class="text-primary">2. How We Use Your Information</h4>
                    <p class="text-muted">We use your data to provide and improve services, personalize content, and enhance security. We do not sell your data to third parties.</p>
                </div>
                <div class="mb-5">
                    <h4 class="text-primary">3. Cookies</h4>
                    <p class="text-muted">This site uses cookies to maintain sessions, track activity, and remember preferences. You can disable cookies in your browser settings.</p>
                </div>
                <div class="mb-5">
                    <h4 class="text-primary">4. Data Security</h4>
                    <p class="text-muted">We implement strong security measures to protect your information. However, no online system is 100% secure, and we encourage best practices on your end as well.</p>
                </div>
                <div class="mb-5">
                    <h4 class="text-primary">5. Your Rights</h4>
                    <p class="text-muted">You can request access to, correction of, or deletion of your data by contacting us. We respect your rights under applicable data protection laws.</p>
                </div>
                <div class="mb-5">
                    <h4 class="text-primary">6. Changes to This Policy</h4>
                    <p class="text-muted">We may update this policy. Significant changes will be announced. Continued use of the platform implies acceptance of the revised terms.</p>
                </div>
                <div class="text-muted small text-end">
                    <i class="far fa-clock me-1"></i> Last updated: June 16, 2025
                </div>
            </div>
        </div>
    </div>
</section>
