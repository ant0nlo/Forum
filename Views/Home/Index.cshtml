@{
    ViewData["Title"] = "Home";
}

<section class="hero bg-gradient-primary text-white py-5">
    <div class="container text-center">
        <h1 class="display-4 fw-bold mb-3">ForumSentiment</h1>
        <p class="lead mb-4">
            Intelligent discussions begin here. Post freely, stay respectful.<br />
            Moderated by sentiment, powered by the community.
        </p>
        <a href="/Post/Create" class="btn btn-light btn-lg px-4 shadow-sm">
            <i class="fas fa-pen me-2"></i>Start a New Discussion
        </a>
    </div>
</section>

<section class="features bg-white py-5 border-top">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <i class="fas fa-brain fa-3x text-primary mb-3"></i>
                <h5 class="fw-bold">AI-Powered Moderation</h5>
                <p class="text-muted">Comments are filtered using intelligent sentiment analysis.</p>
            </div>
            <div class="col-md-4 mb-4">
                <i class="fas fa-user-shield fa-3x text-primary mb-3"></i>
                <h5 class="fw-bold">Role-Based Access</h5>
                <p class="text-muted">Admins and moderators keep the community safe and fair.</p>
            </div>
            <div class="col-md-4 mb-4">
                <i class="fas fa-comments fa-3x text-primary mb-3"></i>
                <h5 class="fw-bold">Community-Driven</h5>
                <p class="text-muted">Your voice matters. Share ideas, ask questions, and debate.</p>
            </div>
        </div>
    </div>
</section>
